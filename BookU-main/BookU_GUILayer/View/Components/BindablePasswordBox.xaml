<UserControl x:Class="BookU_GUILayer.View.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk1="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:BookU_GUILayer.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <xctk1:WatermarkPasswordBox x:Name="passwordBox" 
                                PasswordChar="*"
                                PasswordChanged="PasswordBox_PasswordChanged" 
                                Padding="7"
                                HorizontalContentAlignment="Center"
                                Watermark="*******"/>
</UserControl>